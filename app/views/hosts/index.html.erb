<div class="table-responsive">
  <%= render 'layouts/header' %>
  <%= link_to new_host_path, class: 'btn btn-xs btn-primary' do %>
    <span class="fa fa-plus"></span> Add host
  <% end %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th class="name">Hostname</th>
        <th class="name">IP Address</th>
        <th class="address">Mac Address</th>
        <th class="status">Status</th>
      </tr>
    </thead>

    <tbody id="services">
    <% @hosts.each do |host| %>
      <script>$(window).load(function() { $.getScript('<%= hosts_item_path id: host.id %>.js'); }); </script>
      <tr class="" id="host<%= host.id %>">
        <td class="name"><%= link_to edit_host_path(host) do %><span class="fa fa-power-off"></span> <%= host.name %><% end %></td>
        <td class="address"><span class="fa fa-power-off"> <%= host.address %></span></td>
        <td class="address"><span class="fa fa-desktop"> <%= host.mc_address %></span></td>
        <td class="status"></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
