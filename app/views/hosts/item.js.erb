<% ping = ping(@host.address) %>

// Color
<% if ping == 0 %>
$('#host<%= @host.id %>').addClass( "danger" );
<% else %>
$('#host<%= @host.id %>').addClass( "success" );
<% end %>

// Status
<% if ping == 0 %>
$('#host<%= @host.id %>>.status').html( '<span class="fa fa-power-off"></span> offline' );
<% else %>
$('#host<%= @host.id %>>.status').html( '<span class="fa fa-circle-o-notch"></span> <%= ping %> ms' );
<% end %>
