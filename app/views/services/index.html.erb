<h1>Services</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Name</th>
      <th>Address</th>
      <th>Port</th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td></td>
        <td><%= link_to service.name, service %></td>
        <td><%= service.address %></td>
        <td><%= service.port %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Service', new_service_path %>
